<h1>Udpate a Customer</h1>
<form method="post" action="/admin_customer/customer_updateone/{{customer._id}}?_method=PUT">
  <div class="form-group">
    <label for="customer_name">Name</label>
    <input type="input" class="form-control" value="{{customer.customer_name}}" id="customer_name" name="customer_name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="customer_email">Email</label>
    <input type="input" class="form-control" value="{{customer.customer_email}}" id="customer_email" name="customer_email" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="customer_phone">Phone</label>
    <input type="input" class="form-control" value="{{customer.customer_phone}}" id="customer_phone" name="customer_phone" placeholder="Phone">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>