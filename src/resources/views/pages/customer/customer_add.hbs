<div class="justify-center flex pt-20">
  <div class="bg-white rounded-lg shadow-lg p-6 text-xl w-1/2 leading-relaxed">
    <h1 class="text-2xl font-bold mb-4 justify-center flex">Add a Customer</h1>
    <form method="post" action="/admin_customer/customer_store">
      <div class="mb-4">
        <label for="customer_name" class="pl-2 h-10 text-black">Name</label>
        <input type="input" class="form-input h-16 pl-2 mt-1 block w-full rounded-md border-gray-300 border-2" id="customer_name" name="customer_name" placeholder="Name">
      </div>
      <div class="mb-4">
        <label for="customer_phone" class="pl-2 h-10 text-black">Phone</label>
        <input type="input" class="form-input h-16 pl-2 mt-1 block w-full rounded-md border-gray-300 border-2" id="customer_phone" name="customer_phone" placeholder="Phone">
      </div>
      <div class="mb-4">
        <label for="customer_email" class="pl-2 h-10 text-black">Email</label>
        <input type="input" class="form-input h-16 pl-2 mt-1 block w-full rounded-md border-gray-300 border-2  " id="customer_email" name="customer_email" placeholder="Email">
      </div>
      <div class="flex justify-center">
        <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded">Submit</button>
      </div>
    </form>
  </div>
</div>